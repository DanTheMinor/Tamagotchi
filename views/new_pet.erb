<h1>You created a <%= @a_pet.name() %> Tamagotchi</h1>
<ul>
  <li>Age: <%=  sprintf "%.1f", @a_pet.age() %></li>
  <li>Food: <%= sprintf "%.2f", @a_pet.food_level() %></li>
  <li>Alive: <%= @a_pet.is_alive?() %> </li>
  <!--add food form-->
</ul>

<form action='/new_pet' method='post'>
  <div class='form-group'>
    <input type='text' name='food'>
  </div>
  <button type='submit' class='btn btn-success'>FEED YOUR PET</button>
</form>

<a href='/new_pet'>Update</a>
